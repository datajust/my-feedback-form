
<%= form_for(@feedback, :remote => true, :html => {:class => 'form-horizontal'}) do |f| %>
  <div class="control-group <%= @feedback.errors[:kind].empty? ? '' : 'error' %>">
    <%= f.label :kind, :class => 'control-label' %>
    <div class="controls">
      <%= select_tag(:kind, options_for_select([['bug','bug'],['suggestion','suggestion']])) %>
      <% @feedback.errors[:kind].each do |msg| %>
        <p class="help-inline"><%= msg %></p>
      <% end %>
    </div>
  </div>

  <div class="control-group <%= @feedback.errors[:email].empty? ? '' : 'error' %>">
    <%= f.label :email, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :email %>
      <% @feedback.errors[:email].each do |msg| %>
        <p class="help-inline"><%= msg %></p>
      <% end %>
    </div>
  </div>

    <%= hidden_field_tag :url,  :value => "#{request.env['HTTP_REFERER']}"%>
    <%= hidden_field_tag :user_agent,  :value => "#{request.env['HTTP_USER_AGENT']}" %>

  <div class="control-group <%= @feedback.errors[:message].empty? ? '' : 'error' %>">
    <%= f.label :message, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_area :message, :size => "10x5" %>
      <% @feedback.errors[:message].each do |msg| %>
        <p class="help-inline"><%= msg %></p>
      <% end %>
    </div>
  </div>
<% end %>
